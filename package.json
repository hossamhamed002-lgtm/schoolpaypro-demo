{
  "name": "edulogic-erp---master-school-blueprint",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently -k \"npm:dev\" \"npm run electron:compile && wait-on http://localhost:3000 && cross-env DESKTOP_TEST=true ELECTRON_DISABLE_SECURITY_WARNINGS=true electron electron/dist/main.js\"",
    "electron:build": "npm run build && npm run electron:compile && cross-env DESKTOP_TEST=true electron-builder --config electron-builder.json"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "html2pdf.js": "^0.10.1",
    "lucide-react": "0.475.0",
    "nodemailer": "^6.9.14",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.53.2",
    "recharts": "2.15.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.7.1",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.3.9",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.schoolpaypro.desktop",
    "productName": "School Pay Pro",
    "directories": {
      "output": "dist-desktop"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "name": "schoolpaypro-desktop-test",
      "main": "electron/dist/main.js"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "schoolpaypro",
        "repo": "desktop",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "School Pay Pro (Test)"
    },
    "asar": false
  }
}

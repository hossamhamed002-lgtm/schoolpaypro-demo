{
  "appId": "com.schoolpaypro.desktop",
  "productName": "School Pay Pro",
  "directories": {
    "output": "dist-desktop/windows"
  },
  "files": [
    "dist/**/*",
    "electron/dist/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/dist/main.js"
  },
  "asar": false,
  "win": {
    "target": [
      "nsis:x64",
      "nsis:ia32"
    ],
    "icon": "build/icons/icon.ico",
    "publisherName": "School Pay Pro",
    "artifactName": "SchoolPayPro-Setup-${arch}.exe"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "School Pay Pro"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "schoolpaypro",
      "repo": "desktop",
      "releaseType": "release"
    }
  ]
}
